<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳转到Livedata实现的倒计时页面"
        android:id="@+id/btn_tocountdown" />

    <Button
        android:id="@+id/btn_toglobaldatanotify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用Livedata实现全局数据监听"/>

    <Button
        android:id="@+id/btn_transformation_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transformations.map对Livedata进行转换"/>

</LinearLayout>